<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppCompat.EditText.EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/search_input_bg</item>
        <item name="paddingStart">@dimen/main_padding</item>
        <item name="paddingEnd">@dimen/main_padding</item>
        <item name="android:paddingTop">@dimen/sub_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
    </style>
</resources>